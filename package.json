{
  "name": "get-shit-done-multi",
  "version": "1.9.0",
  "description": "A meta-prompting, context engineering and spec-driven development system for AI coding assistants. Multi-CLI version by shoootyou, based on original work by TÂCHES.",
  "keywords": [
    "claude",
    "codex",
    "copilot",
    "claude-code",
    "ai",
    "meta-prompting",
    "context-engineering",
    "spec-driven-development"
  ],
  "homepage": "https://github.com/shoootyou/get-shit-done-multi#readme",
  "bugs": {
    "url": "https://github.com/shoootyou/get-shit-done-multi/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shoootyou/get-shit-done-multi.git"
  },
  "license": "MIT",
  "author": "shoootyou",
  "contributors": [
    {
      "name": "TÂCHES",
      "url": "original creator, https://github.com/shoootyou/get-shit-done-multi"
    }
  ],
  "type": "commonjs",
  "main": "index.js",
  "bin": {
    "get-shit-done-multi": "bin/install.js"
  },
  "directories": {
    "doc": "docs"
  },
  "files": [
    "bin",
    "commands",
    "get-shit-done",
    "agents",
    "hooks",
    "lib-ghcc",
    "docs",
    "github"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:specs": "jest __tests__/",
    "test:orchestration": "node bin/lib/orchestration/orchestration-test-suite.js",
    "test:cross-platform": "node scripts/test-cross-platform.js",
    "test:generation": "node scripts/test-agent-generation.js",
    "test:installation": "node scripts/test-agent-installation.js",
    "test:invocation": "node scripts/test-agent-invocation.js",
    "install:copilot": "node bin/install.js --copilot",
    "install:claude": "node bin/install.js --local",
    "install:codex": "node bin/install.js --codex",
    "docs:generate": "node bin/doc-generator/generate-comparison.js && node bin/doc-generator/generate-matrix.js && node bin/doc-generator/extract-capabilities.js",
    "docs:validate": "node bin/validate-docs.js",
    "docs:stamp": "node bin/doc-generator/add-version-stamps.js docs/cli-comparison.md",
    "check-links": "node scripts/documentation/link-checker.js",
    "install-hooks": "cp hooks/pre-commit-docs .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "cli-progress": "^3.12.0",
    "debug": "^4.4.3",
    "fs-extra": "^11.3.3",
    "gray-matter": "^4.0.3",
    "ignore": "^7.0.5",
    "js-yaml": "^4.1.1",
    "ms": "^2.1.3",
    "prompts": "^2.4.2",
    "simple-git": "^3.30.0"
  },
  "engines": {
    "node": ">=16.7.0"
  },
  "devDependencies": {
    "diff": "^5.2.2",
    "execa": "^5.1.1",
    "fast-glob": "^3.3.3",
    "jest": "^29.7.0",
    "markdown-link-check": "^3.14.2",
    "p-map": "^4.0.0",
    "strip-ansi": "^7.1.2",
    "tmp-promise": "^3.0.3",
    "which": "^3.0.1"
  }
}
